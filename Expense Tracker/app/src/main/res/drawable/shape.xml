<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="-40%"
            android:pivotY="91%">

            <shape
                android:shape="rectangle">

                <stroke
                    android:color="@color/back"
                    android:width="10dp"/>
                <solid
                    android:color="@color/back"/>
            </shape>
        </rotate>
    </item>


</layer-list>